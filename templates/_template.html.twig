{% block body %}

    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="{{path('home')}}">
                <img src="{{asset('images/logo-traiteur.png') }}" class="logo"
                     alt="Bulma: a modern CSS framework based on Flexbox" width="150" height="60">
            </a>
            <div class="navbar-burger burger" data-target="navbarExampleTransparentExample" aria-expanded="true">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>

        <div id="navbarExampleTransparentExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" href="{{ path('home') }}">
                    Accueil
                </a>
                <a class="navbar-item" href="{{ path("qsn") }}">
                    Qui sommes nous?
                </a>
                <div class="navbar-item has-dropdown  is-hoverable">
                    <a class="navbar-link " href="/documentation/overview/start/">
                        Nos menus et buffets
                    </a>
                    <div class="navbar-dropdown is-boxed">
                        <a class="navbar-item" href="/documentation/overview/start/">
                            menu 1
                        </a>
                        <a class="navbar-item" href="https://versions.bulma.io/0.7.0/documentation/modifiers/syntax/">
                            menu 2
                        </a>
                        <a class="navbar-item" href="https://versions.bulma.io/0.7.0/documentation/columns/basics/">
                            menu 3
                        </a>
                        <a class="navbar-item" href="https://versions.bulma.io/0.7.0/documentation/layout/container/">
                            menu 4
                        </a>
                        <a class="navbar-item" href="https://versions.bulma.io/0.7.0/documentation/form/general/">
                            Form
                        </a>
                        {#                        <hr class="navbar-divider">#}
                        {#                        <a class="navbar-item" href="https://versions.bulma.io/0.7.0/documentation/elements/box/">#}
                        {#                            Elements#}
                        {#                        </a>#}
                        {#                        <a class="navbar-item is-active"#}
                        {#                           href="https://versions.bulma.io/0.7.0/documentation/components/breadcrumb/">#}
                        {#                            Components#}
                        {#                        </a>#}
                    </div>
                </div>
                <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link" href="/documentation/overview/start/">
                        Les grandes occasions
                    </a>
                    <div class="navbar-dropdown is-boxed">
                        <a class="navbar-item" href="/documentation/overview/start/">
                            Mariage
                        </a>
                        <a class="navbar-item" href="https://versions.bulma.io/0.7.0/documentation/modifiers/syntax/">
                            batême
                        </a>
                        <a class="navbar-item" href="https://versions.bulma.io/0.7.0/documentation/columns/basics/">
                            Pondesant de cremaillere
                        </a>
                        <a class="navbar-item" href="https://versions.bulma.io/0.7.0/documentation/layout/container/">
                            reception en entreprise 4
                        </a>

                    </div>
                </div>
                {% if app.user %}
                <a class="navbar-item" href="{{path('user-contact', {id:app.user.id})}}">
                    Contact
                </a>
                {% else %}
                <a class="navbar-item" href="{{path('contact')}}">
                    Contact
                </a>
                {% endif %}

            </div>

            <div class="navbar-end ">
                <div class="navbar-item">
                    <div class="field is-grouped">
                        {% if is_granted('ROLE_USER') %}
                            <p class="control">
                                <a class="button is-size-7" target="_blank" href="{{ path('user_profile') }}">{# {{ path('user') }}#}
                                    <span class="icon">
                                    <i class="fas fa-user"></i>
                                  </span>
                                    <span>
                                   {{ app.user.pseudo }}
                                  </span>
                                </a>
                            </p>
                            <p class="control">
                                <a class="button is-size-7 is-primary"
                                   href="{{ path('app_logout') }}">
                                  <span class="icon">
                                   <i class="fas fa-sign-out-alt"></i>
                                  </span>
                                    <span>Déconnexion</span>
                                </a>
                            </p>
                        {% else %}
                            <p class="control">
                                <a class="button is-size-7" target="_blank" href="{{ path('app_login') }}">{# {{ path('user') }}#}
                                    <span class="icon">
                                    <i class="fas fa-user"></i>
                                  </span>
                                    <span>
                                   Espace membre
                                  </span>
                                </a>
                            </p>
                            <p class="control">
                                <a class="button is-size-7 is-primary"
                                   href="{{ path('user_registration') }}">
                                  <span class="icon">
                                   <i class="fas fa-address-card"></i>
                                  </span>
                                    <span>Inscription</span>
                                </a>
                            </p>
                        {% endif %}
                        {% if(is_granted('ROLE_ADMIN')) %}
                            <p class="control">
                                <a class="button is-size-7 is-primary"
                                   href="{{ path('admin_dashboard') }}">
                                  <span class="icon">
                                   <i class="fas fa-shield-alt"></i>
                                  </span>
                                    <span>Back Office</span>
                                </a>
                            </p>

                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </nav>
    {% block content %}

    {% endblock %}
