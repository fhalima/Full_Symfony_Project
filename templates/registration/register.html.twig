{% extends "_template.html.twig" %}

{% block title %}
    Inscription
{% endblock %}

{% block content %}
    <div class="columns is-centered section">
        <div class="column is-one-third box">
            <h1 class="title has-text-primary has-text-centered">
                Inscription
            </h1>

            {{ form_start(register_form) }}
            {{ form_row(register_form.email, { label: 'Votre adresse email' }) }}
            {{ form_row(register_form.pseudo, {label: 'Votre pseudo'}) }}
            {{ form_row(register_form.nom, {label: 'Nom' }) }}
            {{ form_row(register_form.prenom, {label: 'Prenom' }) }}
            {{ form_row(register_form.civilite, {label: 'Civilité' }) }}
            {{ form_row(register_form.telephone, {label: 'Téléphone' }) }}
            {{ form_row(register_form.plainPassword.first, {label: 'Mot de passe' }) }}
            {{ form_row(register_form.plainPassword.second, {label: 'Répétez le mot de passe' }) }}

            <button class="button is-primary is-fullwidth" type="submit">
                S'inscrire
            </button>
            {{ form_end(register_form) }}
        </div>
    </div>
{% endblock %}
